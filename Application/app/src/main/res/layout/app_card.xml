<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_margin"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgApp"
            android:layout_width="@dimen/circular_image_width_small"
            android:layout_height="@dimen/circular_image_height_small"
            android:layout_margin="@dimen/small_margin"
            android:src="@drawable/ic_app"
            app:civ_border_color="@color/circular_image_border_color"
            app:civ_border_width="@dimen/circular_image_border_small" />

        <TextView
            android:id="@+id/txtAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/small_margin"
            android:text="@string/child_app_name"
            android:textColor="@color/text_color_black_light"
            android:textSize="@dimen/text_mid_size"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switchAppState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/small_margin"
            android:gravity="center|end"
            android:switchPadding="@dimen/small_padding"
            android:text="@string/enabled"
            android:textColor="@color/text_color_black_light"
            android:textSize="@dimen/text_mid_size"
            android:textStyle="bold" />

    </LinearLayout>
</android.support.v7.widget.CardView>