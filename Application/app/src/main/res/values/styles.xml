<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="OkButton">
        <item name="android:background">@drawable/button_ok</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CancelButton">
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/button_cancel</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="HeaderText">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_24sp</item>
        <item name="android:textColor">@color/flatui_midnight_blue</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">@dimen/margin_8dp</item>
    </style>


    <style name="BodyText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/flatui_wet_asphalt</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">@dimen/margin_8dp</item>
    </style>

    <style name="DialogFragmentEditText">
        <item name="android:ems">10</item>
        <item name="android:drawablePadding">@dimen/padding_8dp</item>
        <item name="android:layout_margin">@dimen/margin_8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/padding_8dp</item>
        <item name="android:background">@drawable/edit_text_rounded</item>
    </style>

    <style name="CardTextViewAppNameBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/app_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardTextViewAppName">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_margin">@dimen/margin_8dp</item>
        <item name="android:textColor">@color/flatui_midnight_blue</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardTextViewActivityHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_margin">@dimen/margin_8dp</item>
        <item name="android:textColor">@color/flatui_midnight_blue</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="CardTextViewActivityBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_margin">@dimen/margin_8dp</item>
        <item name="android:textColor">@color/flatui_wet_asphalt</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="CardSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|end</item>
        <item name="android:layout_margin">@dimen/margin_8dp</item>
    </style>

    <style name="TextViewPermissions">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:textColor">@color/flatui_wet_asphalt</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="TextViewPermissionsExplanation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_128dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/flatui_wet_asphalt</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
